{
    "manifest_version": 3,
    "name": "Attention Rehab",
    "version": "1.0",
    "description": "Block distracting websites with timed access passes",
    "permissions": ["storage", "tabs", "webNavigation", "activeTab", "alarms", "scripting"],
    "host_permissions": [
      "*://*.x.com/*",
      "*://*.linkedin.com/*",
      "*://*.youtube.com/*",
      "*://*.instagram.com/*",
      "*://*.facebook.com/*",
      "*://*.twitter.com/*",
      "*://*.tiktok.com/*",
      "*://*.twitch.tv/*"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    },
    "icons": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  }